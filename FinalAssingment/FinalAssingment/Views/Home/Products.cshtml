@model  IEnumerable<FinalAssingment.Models.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<ul>
    @foreach (var p in Model) {
        //This new Parameter will help us to find out about the product name and differenciate to different products
        <li>@Html.ActionLink(p.Name,"ProductInformation","Home" , new { ProductName = p.Name }, null)</li>
    }
</ul>
